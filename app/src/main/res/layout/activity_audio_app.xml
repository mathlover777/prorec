    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/ma_pa"
        android:checked="false"
        android:textOff="MA TONE"
        android:textOn="PA TONE"
        android:layout_above="@+id/searchSimilar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/msg"
        android:layout_alignEnd="@+id/msg" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP PLAY"
        android:id="@+id/stop_play"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/searchSimilar"
        android:layout_alignRight="@+id/msg"
        android:layout_alignEnd="@+id/msg"
        android:onClick="stop_music" />

</RelativeLayout>
