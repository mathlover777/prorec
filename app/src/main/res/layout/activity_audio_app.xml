        <!--android:text="Play Recorded Sound"-->
        <!--android:id="@+id/playButton"-->
        <!--android:layout_below="@+id/recordButton"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:onClick="playAudio" />-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Similar"
        android:id="@+id/searchSimilar"
        android:onClick="play_similar_audio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/pitch_value_display"
        android:layout_alignEnd="@+id/pitch_value_display" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
